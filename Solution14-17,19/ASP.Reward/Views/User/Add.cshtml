@using ASP.Reward.Models;

@model UserViewModel

@{
    ViewBag.Title = "Add";
    var currentUser = Model;
    if (currentUser == null)
    {
        currentUser = new UserViewModel();
    }
}

<h2>Добавить новго пользователя</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="firstName">Имя</label>
        <input name="FirstName" type="text" class="form-control" id="firstName" value="" />
    </div>
    <div class="form-group">
        <label for="lastName">Фамилия</label>
        <input name="LastName" type="text" class="form-control" id="lastName" value="" />
    </div>
    <div class="form-group">
        <label for="birthdate">Дата рождения</label>
        <input name="Birthdate" type="date" class="form-control" id="birthdate" value="" />
    </div>
    <div class="form-group">
        <p>Rewards</p>
        @for (var i = 0; i < currentUser.AvailableRewards.Count; i++)
        {
            var r = Model.AvailableRewards[i];
            <label>@r.Title</label>
            <input type="number" name="AvailableRewards[@i].Id" style="display: none;" value="@r.Id" />
            @Html.EditorFor(m => m.AvailableRewards[i].Checked)
            <br />
        }
    </div>
}